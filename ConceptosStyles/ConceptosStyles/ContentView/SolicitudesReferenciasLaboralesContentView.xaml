<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConceptosStyles.ContentView.SolicitudesReferenciasLaboralesContentView"
             xmlns:numeric="clr-namespace:Syncfusion.SfNumericTextBox.XForms;assembly=Syncfusion.SfNumericTextBox.XForms"
             Style="{DynamicResource PrincipalBackground}">
    <ContentView.Content>
        <Frame Padding="50" BackgroundColor="White">
            <StackLayout Orientation="Horizontal"  HorizontalOptions="FillAndExpand">
                <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                    <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand">
                        <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand">
                            <Label Text="Nombre de la empresa" TextColor="Black"></Label>
                            <Entry></Entry>
                        </StackLayout>

                        <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand">
                            <Label Text="Teléfono de la empresa" TextColor="Black"></Label>
                            <Entry></Entry>
                        </StackLayout>

                        <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand">
                            <Label Text="Dirección de la empresa" TextColor="Black"></Label>
                            <Entry></Entry>
                        </StackLayout>
                    </StackLayout>
                    <Label Text=".  .  .  .  .  .  .  .  .  .  .  .  .  .  .  ." Style="{DynamicResource DotsSeparator}" ></Label>
                </StackLayout>

                

                <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                    <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand">
                        <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand">
                            <Label Text="Cargo" TextColor="Black"></Label>
                            <Picker x:Name="pckCargo">
                                <Picker.Items>
                                    <x:String>Ingeniero</x:String>
                                    <x:String>Doctor</x:String>
                                </Picker.Items>
                            </Picker>
                        </StackLayout>

                        <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand">
                            <Label Text="Salario" TextColor="Black"></Label>
                            <Picker x:Name="pckSalario">
                                <Picker.Items>
                                    <x:String>1'000.000</x:String>
                                    <x:String>10'000.000</x:String>
                                </Picker.Items>
                            </Picker>
                        </StackLayout>

                        <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand">
                            <Label Text="Tiempo en la empresa" TextColor="Black"></Label>
                            <numeric:SfNumericTextBox MaximumNumberDecimalDigits="0" x:Name="entryAnosTiempoEmpresa"  AllowNull="false"  FormatString="Años"/>
                            <numeric:SfNumericTextBox MaximumNumberDecimalDigits="0" x:Name="entryMesesTiempoEmpresa"  AllowNull="false"  FormatString="Meses"/>
                        </StackLayout>

                    </StackLayout>
                    <Label Text=".  .  .  .  .  .  .  .  .  .  .  .  .  .  .  ." Style="{DynamicResource DotsSeparator}"></Label>
                </StackLayout>

                

                <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand">
                    <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand">
                        <Label Text="Ocupación *" TextColor="Black"></Label>
                        <Picker x:Name="pckOcupacion">
                            <Picker.Items>
                                <x:String>Independiente</x:String>
                                <x:String>Desempleado</x:String>
                            </Picker.Items>
                        </Picker>
                    </StackLayout>

                    <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand">
                        <Label Text="Ingresos mensuales *" TextColor="Black"></Label>
                        <Picker x:Name="pckIngresos">
                            <Picker.Items>
                                <x:String>Más de 1'000.000</x:String>
                                <x:String>Más de 10'.000.000</x:String>
                            </Picker.Items>
                        </Picker>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                        <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand">
                            <Label Text="Teléfono celular" TextColor="Black"></Label>
                            <numeric:SfNumericTextBox MaximumNumberDecimalDigits="0" x:Name="entryCelular"  AllowNull="false"  FormatString="n"/>
                        </StackLayout>

                    </StackLayout>
                </StackLayout>
            </StackLayout>
        </Frame>
    </ContentView.Content>
</ContentView>